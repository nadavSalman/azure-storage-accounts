{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
      "parameters": {
        "publicKeypath": {
        "type": "string",
        "defaultValue": "../../keys/id_rsa.pub"
      },
      "projectName": {
        "type": "string",
        "metadata": {
          "description": "Specifies a name for generating resource names."
        }
      },
      "linuxServerTemplatePath": {
        "type": "string"
      }
    },
    "functions": [],
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "linuxServer",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "relativePath": "linuxServer.json"
          },
          "parameters": {
            "projectName": {
            "value": "[parameters('projectName')]"
            },
            "location": {
              "value": "[parameters('publicKeypath')]"
            }
          }
        }
      }
    ],
    "outputs": {}
  }